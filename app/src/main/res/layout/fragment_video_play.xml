<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_search_video_scene"
    tools:context=".presentation.search.VideoPlayFragment">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_play_player"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:padding="-8dp"
        android:background="@color/background_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/video_play_player_vv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/drawable_search_driver"
        app:layout_constraintBottom_toBottomOf="@+id/video_play_player"
        app:layout_constraintStart_toStartOf="@+id/video_play_player"
        app:layout_constraintTop_toTopOf="@+id/video_play_player" />

    <ImageView
        android:id="@+id/video_play_player_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/drawable_search_driver"
        app:layout_constraintBottom_toBottomOf="@+id/video_play_player"
        app:layout_constraintEnd_toStartOf="@+id/video_play_player_btn"
        app:layout_constraintStart_toEndOf="@+id/video_play_player_vv"
        app:layout_constraintTop_toTopOf="@+id/video_play_player" />

    <ImageView
        android:id="@+id/video_play_player_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/drawable_search_driver"
        app:layout_constraintBottom_toBottomOf="@+id/video_play_player"
        app:layout_constraintEnd_toEndOf="@+id/video_play_player"
        app:layout_constraintTop_toTopOf="@+id/video_play_player" />


