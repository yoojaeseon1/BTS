<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".presentation.search.SearchRecommendFragment">


    <ImageView
        android:id="@+id/search_recommend_btn_exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@drawable/sel_search_recommend_btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_recommend_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:text="버스기사 추천 여행지"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_recommend_btn_exit"
        app:layout_constraintBottom_toTopOf="@+id/search_recommend_iv_title"/>

    <ImageView
        android:id="@+id/search_recommend_iv_title"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/drawable_search_driver"
        app:layout_constraintEnd_toEndOf="@+id/search_recommend_tv_title"
        app:layout_constraintStart_toStartOf="@+id/search_recommend_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/search_recommend_tv_title"
        app:layout_constraintBottom_toTopOf="@+id/search_recommend_tv_name"/>

    <TextView
        android:id="@+id/search_recommend_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:text="장소이름"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/search_recommend_iv_title"
        app:layout_constraintStart_toStartOf="@+id/search_recommend_iv_title"
        app:layout_constraintTop_toBottomOf="@+id/search_recommend_iv_title"
        app:layout_constraintBottom_toTopOf="@+id/search_recommend_tv_info"/>

    <TextView
        android:id="@+id/search_recommend_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="소개"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/search_recommend_tv_name"
        app:layout_constraintStart_toStartOf="@+id/search_recommend_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/search_recommend_tv_name"
        app:layout_constraintBottom_toTopOf="@+id/search_recommend_btn_another"/>

    <TextView
        android:id="@+id/search_recommend_btn_another"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:text="별로예요"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/sel_search_recommend_btn_another"
        app:layout_constraintEnd_toStartOf="@+id/search_recommend_btn_accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/search_recommend_btn_accept"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:text="마음에 들어요!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/sel_search_recommend_btn_accept"
        app:layout_constraintTop_toTopOf="@+id/search_recommend_btn_another"
        app:layout_constraintStart_toEndOf="@+id/search_recommend_btn_another"
        app:layout_constraintBottom_toBottomOf="@+id/search_recommend_btn_another"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>